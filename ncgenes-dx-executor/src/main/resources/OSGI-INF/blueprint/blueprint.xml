<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0" default-activation="eager">

  <cm:property-placeholder persistent-id="edu.unc.mapseq.executor.ncgenes.dx" update-strategy="reload">
    <cm:default-properties>
      <cm:property name="period" value="2" />
    </cm:default-properties>
  </cm:property-placeholder>

  <reference id="NCGenesDXPipelineBeanService" interface="edu.unc.mapseq.pipeline.PipelineBeanService"
    component-name="NCGenesDXPipelineBeanService" />

  <bean id="task" class="edu.unc.mapseq.executor.ncgenes.dx.NCGenesDXPipelineExecutorTask">
    <property name="pipelineBeanService" ref="NCGenesDXPipelineBeanService" />
  </bean>

  <bean id="NCGenesDXPipelineExecutorService" class="edu.unc.mapseq.executor.ncgenes.dx.NCGenesDXPipelineExecutorService"
    init-method="start" destroy-method="stop" activation="eager">
    <property name="task" ref="task" />
    <property name="period" value="${period}" />
    <cm:managed-properties persistent-id="edu.unc.mapseq.executor.ncgenes.dx" update-strategy="container-managed" />
  </bean>

</blueprint>
